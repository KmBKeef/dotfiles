[colors]
; background = #424242
background = #2E3440
foreground = #759fbc
; foregroud = #00FA8E
alert = #dd5837
poweritems = #9dd583

[bar/statusbar]
# monitor = eDP1
width = 100%
height = 40
radius = 0.0
fixed-center = true

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 3
line-color = #f00

border-size = 0
border-color = #00000000

padding-left = 0
padding-right = 0

module-margin-left = 1
module-margin-right = 2

font-0 = Interface:pixelsize=14;2
font-1 = FontAwesome:pixelsize=14;2

modules-left = bspwm
modules-center = xwindow
modules-right = wlan battery volume powermenu

wm-restack = bspwm
; tray-position =


[module/bspwm]
type = internal/bspwm

;icon-default = ♟
; ws-icon-0 = 1;一
; ws-icon-1 = 2;二
; ws-icon-2 = 3;三
; ws-icon-3 = 4;四
; ws-icon-4 = 5;五
; ws-icon-5 = 6;六
; ws-icon-6 = 7;七
; ws-icon-7 = 8;八

label-mode-padding = 2
label-mode-foreground = #000
label-mode-background = ${colors.background}

label-focused = %name%
label-focused-background = ${colors.foreground}
label-focused-foreground= ${colors.background}
;${colors.foreground}
; label-focused-underline= ${colors.foreground}
label-focused-padding = 2

label-occupied = %name%
label-occupied-padding = 2

label-urgent = %name%
label-urgent-foreground = ${colors.background}
label-urgent-background = ${colors.alert}
label-urgent-padding = 2

label-empty = %name%
label-empty-foreground = ${colors.foreground}
label-empty-padding = 2

[module/i3]
type = internal/i3
format = <label-state> <label-mode>
index-sort = true
wrapping-scroll = true
strip-wsnumbers = true
pin-workspaces = true

label-mode-padding = 3
label-mode-foreground = ${colors.background}

label-unfocused-foreground = ${colors.foreground}
label-unfocused-padding = 3

label-visible-foregroud = ${colors.foreground}
label-visible-padding = 3

label-focused-foreground = ${colors.background}
label-focused-background = #9FA895
label-focused-padding = 3

label-urgent-padding = 3
label-urgent-foreground = ${colors.background}
label-urgent-background = ${colors.alert}

[module/xwindow]
type = internal/xwindow
label = %title:0:120:...%

[module/wlan]
type = internal/network
interface = wlp3s0
interval = 3.0

format-connected = <ramp-signal>
format-connected-padding = 3

format-disconnected =

ramp-signal-0 = 
ramp-signal-0-foreground = #5D645E
ramp-signal-1 = 
ramp-signal-1-foreground = #6B756C
ramp-signal-2 = 
ramp-signal-2-foreground = #798679
ramp-signal-3 = 
ramp-signal-3-foreground = #869787
ramp-signal-4 = 
ramp-signal-4-foreground = ${colors.foreground}

[module/volume]
type = internal/volume

format-volume = <ramp-volume>
format-volume-padding = 3
label-muted = 
label-muted-padding = 3

ramp-volume-0 = 
ramp-volume-1 = 
ramp-volume-2 = 

[module/battery]
type = internal/battery
